@model List<GetProductsWithCategoriesDto>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/AdminLayout/Index.cshtml";
	
}

<div class="col-md-20">
	<div class="card">
		<div class="card-header">
			<div class="card-title">Ürün Listesi</div>
		</div>
		<div class="card-body">
			<table class="table table-hover">
				<thead>
					<tr>
						<th scope="col">#</th>
						<th scope="col">Ürün Resmi</th>
						<th scope="col">Ürün Adı</th>
						<th scope="col">Kategori</th>
						<th scope="col">Fiyatı</th>
						<th scope="col">Açıklama</th>
						<th scope="col">Durum</th>
						<th scope="col">Düzenle</th>
						<th scope="col">Sil</th>
					</tr>
				</thead>
				<tbody>
					@foreach (var item in Model)
					{
					
						<tr>
							<td>@item.ProductID</td>
							<td><img src="@item.ProductImageUrl" width="100" height="100" /></td>
							<td>@item.ProductName</td>
							<td>@item.CategoryName</td>
							<td>@item.ProductPrice ₺</td>
							<td>@item.ProductDescription</td>
							<td>
								@if (item.ProductStatus.Equals(true))
								{
									<p class="text-success">Aktif</p>
								}
								else
								{
									<p class="text-danger">Pasif</p>
								}
							</td>
							<td>
								<a href="@Url.Action("Update", "Product", new { id = item.ProductID})" class="btn btn-warning btn-sm">Düzenle</a>
							</td>
							<td>
								<a href="@Url.Action("Delete", "Product", new { id = item.ProductID})" class="btn btn-danger btn-sm">Sil</a>
							</td>
						</tr>
					}

				</tbody>
			</table>
			<a href="@Url.Action("Create", "Product")" class="btn btn-primary btn-sm">Ekle</a>
		</div>
	</div>
</div>



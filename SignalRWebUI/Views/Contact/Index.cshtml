@model List<ResultContactDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}



<div class="col-md-20">
	<div class="card">
		<div class="card-header">
			<div class="card-title">İletişim İşlemleri</div>
		</div>
		<div class="card-body">
			<table class="table table-hover">
				<thead>
					<tr>
						<th scope="col">#</th>
						<th scope="col">Adres</th>
						<th scope="col">Telefon No</th>
						<th scope="col">Mail</th>
						<th scope="col">Açıklama</th>
						<th scope="col">Düzenle</th>
						
					</tr>
				</thead>
				<tbody>
					@foreach (var item in Model)
					{
						<tr>
							<td>@item.ContactID</td>
							<td>@item.ContactLocation</td>
							<td>@item.ContactPhone</td>
							<td>@item.ContactMail</td>
							<td>@item.ContactFooterDescription</td>
							
							<td>
								<a href="@Url.Action("Update", "Contact", new { id = item.ContactID})" class="btn btn-warning btn-sm">Düzenle</a>
							</td>
							
						</tr>
					}

				</tbody>
			</table>
		
		</div>
	</div>
</div>
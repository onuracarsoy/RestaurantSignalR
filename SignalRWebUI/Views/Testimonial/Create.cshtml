@model CreateTestimonialDto
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="col-md-20">
    <div class="card">
        <div class="card-header">
            <div class="card-title">Referans Ekle</div>
        </div>
        <form method="post" asp-action="Create" asp-controller="Testimonial">
            <div class="card-body">

                <div class="form-group">
                    <label for="squareInput"> Ad Soyad</label>
                    @Html.TextBoxFor(x => x.TestimonialName, new { @class = "form-control input-square", placeholder = "Ad Soyad", required = "" })
                </div>

                <div class="form-group">
                    <label for="squareInput">Başlık</label>

                    @Html.TextBoxFor(x => x.TestimonialTitle, new { @class = "form-control input-square", placeholder = "Başlık", required = "" })
                </div>
                <div class="form-group">
                    <label for="squareInput">Yorum</label>

                    @Html.TextAreaFor(x => x.TestimonialComment, new { @class = "form-control input-square", placeholder = "Yorum", required = "" })
                </div>
                <div class="form-group">
                    <label for="squareInput">Resim</label>

                    @Html.TextBoxFor(x => x.TestimonialImageUrl, new { @class = "form-control input-square", placeholder = "Resim", required = "" })
                </div>


                <label for="squareSelect">Durum</label>
                <select class="form-control input-square" asp-for="TestimonialStatus">
                    <option value="true">Aktif</option>
                    <option value="false">Pasif</option>

                </select>
            </div>

            <div class="card-action">
                <button href="@Url.Action("Create", "Testimonial")" class="btn btn-success">Ekle</button>
                <a href="@Url.Action("Index", "Testimonial")" class="btn btn-danger">İptal</a>
            </div>
        </form>
    </div>

</div>


@model List<ResultTestimonialDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="col-md-20">
	<div class="card">
		<div class="card-header">
			<div class="card-title">Referans Listesi</div>
		</div>
		<div class="card-body">
			<table class="table table-hover">
				<thead>
					<tr>
						<th scope="col">#</th>
						<th scope="col">Ad Soyad</th>
						<th scope="col">Başlık</th>
						<th scope="col">Yorum</th>
						<th scope="col">Resim</th>
						<th scope="col">Durum</th>
					</tr>
				</thead>
				<tbody>
					@foreach (var item in Model)
					{
						<tr>
							<td>@item.TestimonialID</td>
							<td>@item.TestimonialName</td>
							<td>@item.TestimonialTitle</td>
							<td>@item.TestimonialComment</td>
							<td><img src="@item.TestimonialImageUrl" width="100" height="100" /></td>
							<td>
								@if (item.TestimonialStatus.Equals(true))
								{
									<p class="text-success">Aktif</p>
								}
								else
								{
									<p class="text-danger">Pasif</p>
								}
							</td>
							<td>
								<a href="@Url.Action("Update", "Testimonial", new { id = item.TestimonialID})" class="btn btn-warning btn-sm">Düzenle</a>
							</td>
							<td>
								<a href="@Url.Action("Delete", "Testimonial", new { id = item.TestimonialID})" class="btn btn-danger btn-sm">Sil</a>
							</td>
						</tr>
					}

				</tbody>
			</table>
			<a href="@Url.Action("Create", "Testimonial")" class="btn btn-primary btn-sm">Ekle</a>
		</div>
	</div>
</div>


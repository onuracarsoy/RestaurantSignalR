@model RegisterDto
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<title>Kullanıcı Kayıt</title>
	<!-- Mobile Specific Metas -->
	<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
	<!-- Font-->
	<link rel="stylesheet" type="text/css" href="~/colorlib-regform-32/css/nunito-font.css">
	<!-- Main Style Css -->
	<link rel="stylesheet" href="~/colorlib-regform-32/css/style.css"/>
</head>
<body class="form-v6">
	<div class="page-content">
		<div class="form-v6-content">
			<div class="form-left">
				<img style ="height:700px; width:500px;"src="~/colorlib-regform-32/images/Pizza1.jpg" alt="form">
			</div>
			<form class="form-detail" method="post" asp-action="Index" asp-controller="Register">
				<h2>Kullanıcı Kayıt Formu</h2>
				<div class="form-row">
					<input type="text" asp-for="FirstName" id="full-name" class="input-text" placeholder="Ad" required>
				</div>
				<div class="form-row">
					<input type="text" asp-for="LastName" id="full-name" class="input-text" placeholder="Soyad" required>
				</div>
				<div class="form-row">
					<input type="text" asp-for="UserName" id="full-name" class="input-text" placeholder="Kullanıcı Adı" required>
				</div>
				<div class="form-row">
					<input type="password" asp-for="Password" id="password" class="input-text" placeholder="Şifre" required>
				</div>
				<div class="form-row">
					<input type="password" asp-for="ConfirmPassword" id="comfirm-password" class="input-text" placeholder="Tekrar Şifre" required>
				</div>
				<div class="form-row">
					@Html.ValidationSummary(true, "", new { @style = "color:red;" })
				</div>
				<div class="form-row-last">
					<input type="submit"  class="register" value="Kayıt Ol">
				</div>
				
				
			</form>
		</div>
	</div>
</body>
</html>

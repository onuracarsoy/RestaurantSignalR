@model List<ResultDiscountDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<div class="col-md-20">
	<div class="card">
		<div class="card-header">
			<div class="card-title">Kampanya Listesi</div>
		</div>
		<div class="card-body">
			<table class="table table-hover">
				<thead>
					<tr>
						<th scope="col">#</th>
						<th scope="col">Resim</th>
						<th scope="col">Başlık</th>
						<th scope="col">Miktar</th>
						<th scope="col">Düzenle</th>
						<th scope="col">Sil</th>
					</tr>
				</thead>
				<tbody>
					@foreach (var item in Model)
					{
						<tr>
							<td>@item.DiscountID</td>
							<td><img src="@item.DiscountImageUrl" width="100" height="100" /></td>
							<td>@item.DiscountTitle</td>
							<td>@item.DiscountAmount</td>
							<td>
								<a href="@Url.Action("Update", "Discount", new { id = item.DiscountID})" class="btn btn-warning btn-sm">Düzenle</a>
							</td>
							<td>
								<a href="@Url.Action("Delete", "Discount", new { id = item.DiscountID})" class="btn btn-danger btn-sm">Sil</a>
							</td>
						</tr>
					}

				</tbody>
			</table>
			<a href="@Url.Action("Create", "Discount")" class="btn btn-primary btn-sm">Ekle</a>
		</div>
	</div>
</div>

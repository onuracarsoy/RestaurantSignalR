@model UpdateAboutDto
@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<div class="col-md-20">
    <div class="card">
        <div class="card-header">
            <div class="card-title">Hakkımızda Düzenle</div>
        </div>
        <form method="post" asp-action="Update" asp-controller="About">
            <div class="card-body">
                @Html.HiddenFor(m => m.AboutID)
                <div class="form-group">
                    <label for="squareInput">Başlık </label>
                    @Html.TextBoxFor(m => m.AboutTitle, new { @class = "form-control input-square", @placeholder = "Başlık", required = "" })
                </div>
                <div class="form-group">
                    <label for="squareInput">Resim </label>
                    @Html.TextBoxFor(m => m.AboutImageUrl, new { @class = "form-control input-square", @placeholder = "Resim", required = "" })
                </div>

                <div class="form-group">
                    <label for="squareInput">İçerik </label>
                    @Html.TextAreaFor(m => m.AboutDescription, new { @class = "form-control input-square", @placeholder = "İçerik", required = "" })
                </div>
            
            </div>
            <div class="card-action">
                <button href="@Url.Action("Update", "About")" class="btn btn-warning">Düzenle</button>
                <a href="@Url.Action("Index", "About")" class="btn btn-danger">İptal</a>
            </div>
        </form>
    </div>
    
</div>


@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="container">
    <div class="row">

        @if (ViewBag.QRCodeImage != null)
        {
            <div class="col-md-12">
                <div class="card">
                    <div class="card-body text-center">
                        <img src="@ViewBag.QRCodeImage" alt="QR Kod" class="img-fluid" style="max-height:500px; max-width:500px;" />
                    </div>
                </div>
            </div>
        }

        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <div class="card-title">QR Kod Oluştur</div>
                </div>
                <form method="post" asp-action="Index" asp-controller="QROperation">
                    <div class="card-body">
                        <div class="form-group">
                            <input type="text" name="value" class="form-control" placeholder="Bağlantıyı Giriniz" />
                        </div>
                    </div>
                    <div class="card-action">
                        <button class="btn btn-success">Oluştur</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


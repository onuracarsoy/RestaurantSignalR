@model UpdateCategoryDto
@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
<div class="col-md-20">
    <div class="card">
        <div class="card-header">
            <div class="card-title">Kategori Düzenle</div>
        </div>
        <form method="post" asp-action="Update" asp-controller="Category">
            <div class="card-body">
                @Html.HiddenFor(m => m.CategoryID)
                <div class="form-group">
                    <label for="squareInput">Kategori Adı</label>
                    @Html.TextBoxFor(m => m.CategoryName, new { @class = "form-control input-square", @placeholder = "Kategori Adı", required = "" })
                </div>
                <div class="form-group">
                    <label for="squareSelect">Durum</label>
                    <select class="form-control input-square" asp-for="CategoryStatus">
                        <option value="true">Aktif</option>
                        <option value="false">Pasif</option>

                    </select>
                </div>
            </div>
            <div class="card-action">
                <button href="@Url.Action("Update", "Category")" class="btn btn-warning">Düzenle</button>
                <a href="@Url.Action("Index", "Category")" class="btn btn-danger">İptal</a>
            </div>
        </form>
    </div>
    
</div>


